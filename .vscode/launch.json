{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "build/watchpoint.elf",
            "miDebuggerServerAddress": "127.0.0.1:8080",
            "miDebuggerPath": "gdb-multiarch",
            "MIMode": "gdb",
            "cwd": "${workspaceFolder}/src/watchpoint/rom",
            "miDebuggerArgs": "-readnow",
            "setupCommands": [
                {
                    "text": "set architecture mips:4300",
                    "ignoreFailures": false
                }
            ],
            "sourceFileMap": {
                "libdragon": "${env:LIBDRAGON_DIR}",
            }
        }
    ]
}
